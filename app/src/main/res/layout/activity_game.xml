<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/mar_comp"
    tools:context=".Actividades.GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nom_Jug1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Jugador Uno:" />
        <TextView
            android:id="@+id/pun_Jug1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:layout_marginRight="@dimen/mar_comp"/>
        <TextView
            android:id="@+id/nom_Jug2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Jugador Dos:"/>
        <TextView
            android:id="@+id/pun_Jug2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"/>
    </LinearLayout>
</LinearLayout>