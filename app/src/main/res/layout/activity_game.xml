<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/mar_comp"
    tools:context=".Actividades.GameActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/nom_Jug1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Jugador Uno:" />
            <TextView
                android:id="@+id/pun_Jug1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"
                android:layout_marginRight="@dimen/mar_comp"/>
            <TextView
                android:id="@+id/nom_Jug2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Jugador Dos:"/>
            <TextView
                android:id="@+id/pun_Jug2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"/>
        </LinearLayout>

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
             android:layout_margin="@dimen/pad"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/tam_img_card"
                    android:layout_weight="1"
                    android:text="Button" />

                <ImageButton
                    android:id="@+id/btn_2"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/tam_img_card"
                    android:layout_weight="1"
                    android:text="Button" />

                <ImageButton
                    android:id="@+id/btn_3"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/tam_img_card"
                    android:layout_weight="1"
                    android:text="Button" />

                <ImageButton
                    android:id="@+id/btn_4"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/tam_img_card"
                    android:layout_weight="1"
                    android:text="Button" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_5"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/tam_img_card"
                    android:layout_weight="1"
                    android:text="Button" />

                <ImageButton
                    android:id="@+id/btn_6"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/tam_img_card"
                    android:layout_weight="1"
                    android:text="Button" />

                <ImageButton
                    android:id="@+id/btn_7"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/tam_img_card"
                    android:layout_weight="1"
                    android:text="Button" />

                <ImageButton
                    android:id="@+id/btn_8"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/tam_img_card"
                    android:layout_weight="1"
                    android:text="Button" />
            </LinearLayout>
    </LinearLayout>
</LinearLayout>